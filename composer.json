{
    "name": "thoaud/ongoing-warehouse-php",
    "description": "PHP client library for the Ongoing Warehouse Management System REST API",
    "type": "library",
    "keywords": [
        "ongoing",
        "warehouse",
        "wms",
        "api",
        "rest",
        "php",
        "client"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Audunhus",
            "email": "phpdevsec@proton.me"
        },
        {
            "name": "Directhouse",
            "homepage": "https://directhouse.no"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "guzzlehttp/psr7": "^2.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OngoingAPI\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OngoingAPI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 